<section id="contact" class="contact">
    <div class="container">

      <div class="section-title" data-aos="zoom-out">
        <h2>Create Business</h2>
        <p>Business Profile Creation</p>
      </div>

      <div class="row mt-5">

        <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left">


            <form action="/createB" method="post" >
              <div class="row">
  
                <%# <input type="hidden" name="userId" value = " currentUser._id"> %> 
                <input type="hidden" name="email" value = "<% currentUser.email%>">

                <div class="col-md-6 form-group">
                  <label for="companyName"></label>
                  <input type="text" class="form-control" name="companyName" id="companyName" placeholder="Company Name" autofocus>
                </div>
  
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <label for="city"></label>
                  <input type="text" class="form-control" name="city" id="inputCity" placeholder="What City do you service?" autofocus>
                </div>
  
                <div class="form-group mt-3">
                <label for="state"></label>
                <input type="text" class="form-control" name="state" id="inputState" placeholder="State" autofocus>
                </div>
                
            
                <div class="form-group mt-3">
                <label for="zipCode"></label>
                <input type="number" class="form-control" name="zipCode" id="inputZipCode" placeholder="Enter Zip Code" autofocus>
                </div>

                <div class="form-group mt-3">
                    <label for="biography"></label>
                    <input type="text" class="form-control" name="biography" id="inputBiography" placeholder="Tell us about your business:" autofocus>
                </div>

                <label for="service">Service:</label>
                <% services.forEach((service) => { %>
                <div class="form-group mt-3">
                    <ul>
                    <input type="checkbox" name="service" value="<%=service.title%>" ><%=service.title%><br>
                    
                    </ul>
                    <% }) %>
                </div>
            
  
                </div>
            
  
              <br/><button class="text-center" type="submit">Create Account</button>
            </form>
          </div>